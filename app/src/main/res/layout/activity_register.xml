<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgRegister"
    tools:context=".RegisterActivity"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/logo_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@android:color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />


    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="username"
        android:textColor="@color/hitam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/namaLengkap"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="352dp"
        android:hint="Nama Lengkap"
        android:textColor="@color/hitam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/jnsKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textStyle="bold"
        android:textColor="@color/hitam"
        app:layout_constraintStart_toStartOf="@+id/spJK_Add"
        app:layout_constraintTop_toBottomOf="@+id/namaLengkap"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spJK_Add"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:entries="@array/jenis_kelamin"
        android:textColor="@color/hitam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jnsKelamin"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tglLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txTglLahir_Add"
        app:layout_constraintTop_toBottomOf="@+id/spJK_Add"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txTglLahir_Add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:inputType="date"
        android:textColor="@color/hitam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tglLahir"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tlp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="No. Telepon"
        android:textColor="@color/hitam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTglLahir_Add"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/alamat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="352dp"
        android:hint="Alamat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="352dp"
        android:hint="E - Mail"
        android:textColor="@color/hitam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtText_passwordRegist"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textColor="@color/hitam"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtText_passwordConfRegist"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="password confirmation"
        android:inputType="textPassword"
        android:textColor="@color/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtText_passwordRegist"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_loginRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/login"
        android:text="Login"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/hitam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtText_passwordConfRegist"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_registerRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="register"
        android:textColor="@color/hitam"
        android:fontFamily="sans-serif-smallcaps"
        android:backgroundTint="@color/register"
        app:layout_constraintStart_toEndOf="@+id/btn_loginRegist"
        app:layout_constraintTop_toBottomOf="@+id/edtText_passwordConfRegist" />

</androidx.constraintlayout.widget.ConstraintLayout>