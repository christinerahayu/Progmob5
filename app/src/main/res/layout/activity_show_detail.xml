<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="#ffffff">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_detailbarang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />
        <TextView
            android:id="@+id/judul_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:text="DETAIL BARANG"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kodebrg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/profile"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/profile">

        <TextView
            android:id="@+id/txKodeBarang"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Kode Barang"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showKode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:text="Popcorn"
            android:textColor="#000000"
            android:textSize="15dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/kodebrg"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:id="@+id/txJB"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Jenis Barang"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/showJB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Makanan"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/namab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/jb"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/user">
        <TextView
            android:id="@+id/txNamaBarang"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Nama Barang"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showNama"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="PopCornd"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/namab"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <TextView
            android:id="@+id/txHarga"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Harga"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showHarga"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="7000"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jumlah"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/harga"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/phone">

        <TextView
            android:id="@+id/txJumlah"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Jumlah Barang"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showJumlah"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/jumlah"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/gender">

        <TextView
            android:id="@+id/txTgl"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Tanggal Kedaluwarsa"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/showTgl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="2020-06-12"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</RelativeLayout>