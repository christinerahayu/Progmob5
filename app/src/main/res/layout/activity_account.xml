<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"

    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="56dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_transparent"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nama_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Kelompok 5"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="progmoblanjut"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="400dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/profile"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/profile">

        <TextView
            android:id="@+id/textname"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:text="progmoblanjut"
            android:textColor="#808080"
            android:textSize="15dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="400dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/name"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:id="@+id/testusername"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Kelompok 5"
            android:textAlignment="textEnd"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tlp"
        android:layout_width="400dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/user"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/user">

        <TextView
            android:id="@+id/textphone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/notelepon"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="081907969441"
            android:textAlignment="textEnd"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="400dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tlp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tlp">

        <TextView
            android:id="@+id/textalamat"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Alamat"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/alamatuser"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Denpasar"
            android:textAlignment="textEnd"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</RelativeLayout>


